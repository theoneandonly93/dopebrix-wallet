{
    "name": "fairbrix-phantom-wallet",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "start:pack": "node scripts/start-fairbrix-pack.js",
        "dev:electron": "node scripts/dev-electron.js",
        "build": "vite build",
        "build:electron": "vite build && electron-builder",
        "preview": "vite preview",
        "node": "node fbrix-node/start-node.js",
        "electron": "electron .",
        "dope:miner": "node -r dotenv/config doped/poc_miner.js dotenv_config_path=doped/.env",
        "dope:rewards": "node -r dotenv/config doped/reward_server.js dotenv_config_path=doped/.env",
        "dope:staking": "node -r dotenv/config doped/staking_server.js dotenv_config_path=doped/.env",
        "dope:premine": "node doped/premine_split.js",
        "dope:rewards:secure": "node -r dotenv/config doped/reward_server_hardened.js dotenv_config_path=doped/.env",
        "airdrop:genesis": "node -r dotenv/config doped/airdrop_genesis.js"
    },
    "dependencies": {
        "@noble/hashes": "^1.5.0",
        "@noble/secp256k1": "^2.1.0",
        "@scure/bip32": "^1.4.0",
        "@scure/bip39": "^1.3.0",
        "base-x": "^4.0.0",
        "chart.js": "^4.4.3",
        "node-fetch": "^3.3.2",
        "react": "^18.2.0",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.2.0",
        "zustand": "^4.5.2"
    },
    "devDependencies": {
        "@flydotio/dockerfile": "^0.7.10",
        "@vitejs/plugin-react": "^4.3.1",
        "electron": "^30.0.0",
        "electron-builder": "^24.9.1",
        "vite": "^4.5.14"
    },
    "optionalDependencies": {
        "bitcoinjs-lib": "^6.1.5",
        "dotenv": "^16.4.5",
        "ecpair": "^2.1.0",
        "express": "^4.19.2",
        "tiny-secp256k1": "^2.2.3"
    },
    "build": {
        "appId": "com.dope.brix",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**",
            "electron/**"
        ],
        "extraResources": [
            {
                "from": "fbrix-node",
                "to": "fbrix-node"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
