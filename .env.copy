########################################
# Unified .env for Vercel deployment   #
# - Only VITE_* are exposed to client  #
# - Non-VITE vars are for API routes   #
########################################

# Basic network label
VITE_NETWORK_NAME=fairbrix

# Frontend â†’ Vercel Functions (production/mobile/web)
# The app will call these instead of hitting a node directly.
# For local development, leave blank to use the bundled node via direct RPC.
VITE_FAIRBRIX_PROXY_URL=
VITE_FAIRBRIX_BROADCAST_URL=
# Raw token only (client prepends "Bearer ")
VITE_FAIRBRIX_API_TOKEN=
VITE_FAIRBRIX_API_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJkb3BlYnJpeCIsImV4cCI6MTc3NjIyMzIxMn0.dqB7pQx_6wgXY6GiWc4OYUPTnF9tCxI6kpfANRNB9OA

# Desktop fallback (local node started by app/electron)
VITE_FAIRBRIX_RPC_URL=http://127.0.0.1:8645
VITE_FAIRBRIX_RPC_USER=1
VITE_FAIRBRIX_RPC_PASS=1
VITE_FAIRBRIX_WALLET_NAME=dope

# Dev convenience: start Fairbrix-pack instead of bundled node
# Set to 1/true to spawn START_Fairbrix.exe if found.
USE_FAIRBRIX_PACK=
# Optionally point to the folder containing START_Fairbrix.exe
# FAIRBRIX_PACK_DIR=C:\\path\\to\\Fairbrix-pack
# Or provide the full path to the launcher
# FAIRBRIX_PACK_EXE=C:\\path\\to\\Fairbrix-pack\\START_Fairbrix.exe

# Optional integrations (leave blank if unused)
VITE_SWAP_API_URL=
VITE_ORDINALS_API_URL=
VITE_RUNES_API_URL=
VITE_INDEXER_API_URL=https://fairbrixscan.com
VITE_BUY_URL=
VITE_STAKING_API_URL=

# Address format (defaults match explorer; override only if needed)
# VITE_FAIRBRIX_PKH=0x5f
# VITE_FAIRBRIX_WIF=0x80
# VITE_FAIRBRIX_COMPRESSED=true

# Price feed (client)
# Set a static fallback or a client endpoint to fetch price
# VITE_FBX_PRICE_USD=0.01
VITE_PRICE_API_URL=/api/price

########################################
# Vercel Functions (server-side only)  #
########################################

# JWT secret used to verify Authorization bearer tokens from the client
# Client should set VITE_FAIRBRIX_API_TOKEN to a token signed with this secret.
API_JWT_SECRET=
API_JWT_SECRET=a9103a2d022e19a2beb7b7b60c5d4cf89e93cb46ec287d6f702e38459c118d0a

# CORS allowlist for API routes (comma-separated)
# Supports exact origins and simple wildcards. Examples:
#   http://localhost:5173, http://127.0.0.1:5173, https://your-app.vercel.app, https://*.vercel.app
ALLOWED_ORIGINS=http://localhost:5173, http://127.0.0.1:5173, https://*.vercel.app, https://dopameme.world, https://dopebrix.com

# Upstream Fairbrix node credentials (publicly reachable from Vercel)
# Example: http://user:pass@node.example.com:8645 (if using basic auth, set user/pass below instead)
UPSTREAM_RPC_URL=
UPSTREAM_RPC_USER=
UPSTREAM_RPC_PASS=

# Indexer base URL for serverless proxy (defaults to fairbrixscan)
INDEXER_API_URL=https://fairbrixscan.com

# Server-side price feed (API)
# PRICE_FBX_USD=0.01
# PRICE_FEED_URL=https://your-feed.example.com/fbx-usd

# Optional: Limit allowed RPC methods through the proxy (comma-separated)
# Defaults are safe. Only override if you know what you need.
# RPC_ALLOWED_METHODS=getblockcount,getblockhash,getblock,getbalance,getwalletinfo,getnewaddress,getaddressesbylabel,listunspent,getrawtransaction,createrawtransaction,fundrawtransaction,signrawtransactionwithwallet,sendrawtransaction,loadwallet,createwallet,setgenerate,stake

