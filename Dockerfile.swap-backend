# Use official Node.js image
FROM node:18
WORKDIR /app

# Copy only swap-backend.cjs for swap API
COPY api/swap-backend.cjs ./api/swap-backend.cjs

# Install minimal dependencies (Express)
RUN npm install express

# Expose swap backend port
EXPOSE 3001

# Start swap backend
CMD ["node", "./api/swap-backend.cjs"]
